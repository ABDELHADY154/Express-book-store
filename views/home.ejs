<!-- This example requires Tailwind CSS v2.0+ -->
<div class="container flex flex-col justify-center overflow-x-auto self-center">
  <div class="my-2 sm:-mx-6 lg:-mx-8">
    <div class="py-2 align-middle inline-block min-w-full sm:px-3 lg:px-8">
      <div
        class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg"
      >
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th
                scope="col"
                class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
              >
                Book Title
              </th>
              <th
                scope="col"
                class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
              >
                Subtitle
              </th>
              <th
                scope="col"
                class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
              >
                Authors
              </th>
              <th
                scope="col"
                class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
              >
                Publisher
              </th>
              <th
                scope="col"
                class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
              >
                published Date
              </th>
              <th
                scope="col"
                class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
              >
                Language
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if(books){ books.forEach((book) => { %>

            <tr>
              <td class="px-3 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <div class="flex-shrink-0 h-10 w-10">
                    <img
                      class="h-10 w-10 rounded-full"
                      src="<%= book.cover %> "
                      alt=""
                    />
                  </div>
                  <div class="ml-4">
                    <div class="text-sm font-medium text-gray-900 break-all">
                      <%= book.title %>
                    </div>
                  </div>
                </div>
              </td>
              <td class="px-3 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900 break-all">
                  <% if (book.subtitle) { %>
                  <h2><%= book.subtitle %></h2>
                  <% }else{ %>
                  <h2><%= "None" %></h2>
                  <% } %>
                </div>
              </td>
              <td class="px-3 py-4 whitespace-nowrap"><%= book.authors %></td>
              <td class="px-3 py-4 whitespace-nowrap text-sm text-gray-500">
                <% if (book.publisher) { %>
                <h2><%= book.publisher %></h2>
                <% }else{ %>
                <h2><%= "None" %></h2>
                <% } %>
              </td>
              <td
                class="px-3 py-4 whitespace-nowrap text-right text-sm font-medium"
              >
                <% if (book.publishedDate) { %>
                <h2><%= book.publishedDate %></h2>
                <% }else{ %>
                <h2><%= "None" %></h2>
                <% } %>
              </td>
              <td
                class="px-3 py-4 whitespace-nowrap text-right text-sm font-medium"
              >
                <% if (book.language) { %>
                <h2><%= book.language %></h2>
                <% }else{ %>
                <h2><%= "None" %></h2>
                <% } %>
              </td>
            </tr>
            <% });} %>

            <!-- More people... -->
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
